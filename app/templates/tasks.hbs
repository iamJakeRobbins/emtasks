{{outlet}}
<h1> tasks </h1>
{{#each model as |task|}}
<div class="well">
	<h3>{{#link-to 'tasks.edit' task.id}}{{task.title}}{{/link-to }} </h3>
	<h5>Due: {{task.date}}</h5>
	<p>{{task.description}}</p>
	<button {{action 'deleteTask' task.id}} class='btn btn-danger'>Delete</button>
</div>
{{/each}}
